<xml>
	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>
	
	<files id="common">
		<compilerflag value="-Iinclude"/>
		<file name="common/ExternalInterface.cpp"/>
	</files>
	
	<files id="iphone">
		<compilerflag value="-Iinclude"/>
		<compilerflag value="-Iinclude/GoogleMobileAds"/>
		
		<file name="iphone/SamcodesAdMob.mm"/>
	</files>
	
	<target id="NDLL" output="${LIBPREFIX}samcodesadmob${debug_extra}${LIBEXTRA}" tool="linker" toolid="${STD_MODULE_LINK}">
		<outdir name="../ndll/${BINDIR}"/>
		<ext value=".ndll" if="windows || mac || linux"/>
		<files id="common"/>
		<files id="iphone" if="iphone"/>
	</target>
	
	<target id="default">
		<target id="NDLL"/>
	</target>
</xml>